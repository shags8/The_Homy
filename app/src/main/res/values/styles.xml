<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="registration_text">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily" >@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit_text">
        <item name="android:fontFamily" >@font/poppins_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#99000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Signup_btn">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily" >@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="Continue_btn">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily" >@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/btn_bg_border</item>
    </style>

    <style name="radio_btn">

        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/selector_time</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="radio_btn2">

        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@drawable/selector_time</item>
        <item name="android:textSize">17sp</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">textStart</item>

    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@drawable/selector_calendar</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">17sp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="starting">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily" >@font/poppins_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>


</resources>